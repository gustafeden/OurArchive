rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Items photos: households/{hid}/{itemId}/{fileName}
    match /households/{hid}/{itemId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource != null
        && request.resource.metadata.owner == request.auth.uid
        && request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }

    // Container photos: households/{hid}/containers/{containerId}/{fileName}
    match /households/{hid}/containers/{containerId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource != null
        && request.resource.metadata.owner == request.auth.uid
        && request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }

    // Portfolio photos: public read, admin write only
    match /portfolio/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == '7gKizGf14jbphpxTftSlIbK6D3f2';
    }
  }
}
